---
import { WritingItem } from '@components/cards';
import { Header } from '@components/misc';
import { BaseHead } from '@components/seo';
import { SITE_DESCRIPTION, SITE_TITLE } from '@data/index';
import { getPublishedCollection } from '@utils/index';
import RootLayout from '@layouts/root-layout.astro';

const writings = (await getPublishedCollection('writing')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang='en'>
	<head>
		<BaseHead
			title={SITE_TITLE}
			description={SITE_DESCRIPTION}
			image='/images/ogimage.png'
		/>
	</head>
	<RootLayout>
		<div
			id='Header+title'
			class='flex flex-col w-full gap-6 max-w-xl'>
			<Header />
			<h1 class='w-full text-7xl font-medium tracking-tight'>writings</h1>

			{
				writings.map((writing) => (
					<WritingItem
						title={writing.data.title}
						date={writing.data.pubDate}
						slug={writing.slug}
					/>
				))
			}
		</div>
	</RootLayout>
</html>
