---
import { Dots } from "@components/misc";
import { getUrl } from "@utils/index";

const { title, description, slug, ship_count } = Astro.props;
---

<a href={getUrl(`/ships/${slug}`)}>
	<!-- sronly h3 -->
	<h3 class='sr-only'>{title}</h3>
	<p class='sr-only'>{description} ships</p>
	<Dots ship_count={ship_count} />
</a>
