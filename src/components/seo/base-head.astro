<!-- Canonical URL -->
<link
	rel='canonical'
	href={canonicalURL}
/>

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta
	name='title'
	content={title}
/>
<meta
	name='description'
	content={description}
/>

<!-- Open Graph / Facebook -->
<meta
	property='og:type'
	content='website'
/>
<meta
	property='og:url'
	content={Astro.url}
/>
<meta
	property='og:title'
	content={title}
/>
<meta
	property='og:description'
	content={description}
/>
<meta
	property='og:image'
	content={new URL(image, Astro.url)}
/>

<!-- Twitter -->
