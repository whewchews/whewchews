---
import ThoughtsLayout from "@layouts/thoughts-layout.astro";
import { type CollectionEntry } from "astro:content";
import { ScrollProgress } from "@components/misc";
import { getReadingTime, getPublishedCollection } from "@utils/index";

export async function getStaticPaths() {
  const posts = await getPublishedCollection("archive");
  return posts.map((post: CollectionEntry<"archive">) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<"archive">;

const post = Astro.props;
const readingTime = getReadingTime(post.body);
const { Content } = await post.render();
---

<ThoughtsLayout {...post.data} readingTime={readingTime}>
  <Content />
  <ScrollProgress />
</ThoughtsLayout>
